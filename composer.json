{
    "name": "cjpgdk/bitcoin-script",
    "description": "A Bitcoin script reader.",
    "homepage": "https://github.com/cjpgdk/bitcoin-scipt",
    "license": "MIT",
    "keywords": ["parser", "reader", "Bitcoin", "script", "btc"
    ],
    "authors": [
        {
            "name": "Christian M. Jensen",
            "email": "cmj@cjpg.dk",
            "homepage": "https://cjpg.dk"
        }
    ],
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5.20",
        "code-lts/doctum": "^5.3.3"
    },
    "autoload": {
        "psr-4": {
            "Cjpg\\Bitcoin\\Script\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "check-style": "phpcs -p --standard=PSR12 src tests",
        "fix-style": "phpcbf -p --standard=PSR12 src tests",
        "doctum": "vendor/bin/doctum.php update doctum.php -v"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "prefer-stable": true
}
